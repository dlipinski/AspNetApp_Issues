@model IEnumerable<IssueManager.Models.IssueUser>

@{
    ViewData["Title"] = "";
}

<h2>Latest new issues</h2>


<table class="table">
    <thead>
        <tr>
            <th>                
            </th>   
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
    
        <tr>
        <td>
            <a asp-action="SolveIssue" asp-route-id="@item.Issue.IssueID" title="Solve issue">
                <div class="btn btn-default" style="width:100%;">
                    <table class="table" style="background:none;text-align:left; margin-bottom:5px;">
                        <thead>
                        <tr>
                            <th>
                                @Html.DisplayFor(modelItem => item.Issue.IssueType.Name)
                                ,&nbsp;
                                @Html.DisplayFor(modelItem => item.Issue.Created)
                            </th>
                        </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Issue.Content)
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </a>
            </td>
        </tr>
    
}
    </tbody>
</table>
